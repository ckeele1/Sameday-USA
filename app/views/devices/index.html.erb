<h2>Devices</h2>

<table>
  <thead>
    <th>Name</th>
    <th>Created at</th>
    <th>Updated at</th>
  </thead>

<% @devices.each do |device| %>
	<tbody>
		<tr class="<%= cycle('even','odd') %>">
		    <td><%=h device.name %></td>
		    <td><%=h device.created_at %></td>
		    <td><%=h device.updated_at %></td>
		    <td class="actions">
		    	<%= link_to 'Show', device %>
		    	<%= link_to 'Edit', edit_device_path(device) %>
		    	<%= link_to 'Destroy', device, :confirm => 'Are you sure?', :method => :delete %>
	    	</td>
 		 </tr>
 	</tbody>
<% end %>
</table>

<%= will_paginate @devices %>

<br />

<%= link_to 'New device', new_device_path %>