<h1>Editing coupon</h1>

<% form_for(@coupon) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :visible %><br />
    <%= f.check_box :visible %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :start_date %><br />
    <%= f.datetime_select :start_date %>
  </p>
  <p>
    <%= f.label :end_date %><br />
    <%= f.datetime_select :end_date %>
  </p>
  <p>
    <%= f.label :barcode_file_name %><br />
    <%= f.text_field :barcode_file_name %>
  </p>
  <p>
    <%= f.label :barcode_content_type %><br />
    <%= f.text_field :barcode_content_type %>
  </p>
  <p>
    <%= f.label :barcode_file_size %><br />
    <%= f.text_field :barcode_file_size %>
  </p>
  <p>
    <%= f.label :barcode_updated_at %><br />
    <%= f.datetime_select :barcode_updated_at %>
  </p>
  <p>
  	<%= f.label :model_name, "This is a coupon for..." %><br />
  	<%= f.radio_button :model_name, "place"%>
  	<%= f.label :model_name_place, "a place"%><br />
  	<%= f.radio_button :model_name, "event"%>
  	<%= f.label :model_name_event, "an event"%><br />
  	<%= f.radio_button :model_name, "none"%>
  	<%= f.label :model_name_blank, "I'll decide later"%><br />
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @coupon %> |
<%= link_to 'Back', coupons_path %>