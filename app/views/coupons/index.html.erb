<h2>Coupons</h2>

<table>
  <thead>
    <th>Visible</th>
    <th>Title</th>
    <th>Body</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Barcode file name</th>
    <th>Barcode content type</th>
    <th>Barcode file size</th>
    <th>Barcode updated at</th>
    <th class="actions">Actions</th>
  </thead>

<% @coupons.each do |coupon| %>
	<tbody>
		<tr class="<%= cycle('even','odd') %>">
		    <td><%=h coupon.visible %></td>
		    <td><%=h coupon.title %></td>
		    <td><%=h coupon.body %></td>
		    <td><%=h coupon.start_date %></td>
		    <td><%=h coupon.end_date %></td>
		    <td><%=h coupon.barcode_file_name %></td>
		    <td><%=h coupon.barcode_content_type %></td>
		    <td><%=h coupon.barcode_file_size %></td>
		    <td><%=h coupon.barcode_updated_at %></td>
		    <td class="actions">
		    	<%= link_to image_tag('icons/show.png', :alt => 'Show'), coupon %>
		    	<%= link_to image_tag('icons/edit.png', :alt => 'Edit'), edit_coupon_path(coupon) %>
				<%= link_to image_tag('icons/destroy.png', :alt => 'Destroy'), coupon, :confirm => 'Are you sure?', :method => :delete %>
			</td>
  		</tr>
  	</tbody>
<% end %>
</table>

<%= will_paginate @coupons %>

<br />

<%= link_to 'New coupon', new_coupon_path %>