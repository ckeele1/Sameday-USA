<h1>Listing hours</h1>

<table>
  <tr>
    <th>Start date</th>
    <th>Start time</th>
    <th>End date</th>
    <th>End time</th>
    <th>Days</th>
    <th>Created at</th>
    <th>Updated at</th>
  </tr>

<% @hours.each do |hour| %>
  <tr>
    <td><%=h hour.start_date %></td>
    <td><%=h hour.start_time %></td>
    <td><%=h hour.end_date %></td>
    <td><%=h hour.end_time %></td>
    <td><%=h hour.days %></td>
    <td><%=h hour.created_at %></td>
    <td><%=h hour.updated_at %></td>
    <td><%= link_to 'Show', hour %></td>
    <td><%= link_to 'Edit', edit_hour_path(hour) %></td>
    <td><%= link_to 'Destroy', hour, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New hour', new_hour_path %>