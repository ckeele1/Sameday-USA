<h1>Listing numbers</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Extension</th>
    <th>Device</th>
    <th>Place</th>
    <th class="actions">Actions</th>
  </tr>

<% @numbers.each do |number| %>
  <tr>
    <td><%=h number.number %></td>
    <td><%=h number.extension %></td>
    <td><%=h Device.find_by_number(@number.device_id).name %></td>
    <td><%= link_to image_tag('icons/show.png', :alt => 'Show'), number %></td>
    <td><%= link_to image_tag('icons/edit.png', :alt => 'Edit'), edit_number_path(number) %></td>
    <td><%= link_to image_tag('icons/destroy.png', :alt => 'Destroy'), number, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New number', new_number_path %>